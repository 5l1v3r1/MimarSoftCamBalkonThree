    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" href="/Home/Index" title="Manage">Merhaba @User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Name).Value</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" href="/Auth/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <a class="nav-link text-dark" href="/Auth/LogOut">Çıkış</a>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" href="/Auth/Register">Yeni Kayıt</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" href="/Auth/Login">Giriş</a>
        </li>
