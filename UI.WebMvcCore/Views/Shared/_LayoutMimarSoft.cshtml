<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - mimarSoft</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body class="bg-img">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-ozel2 border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><i>Başer</i><b>Makine</b></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Calculate" asp-action="TrendCalculate">Anasayfa</a>
                        </li>
                        @*<li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Demo">Demo</a>
                        </li>*@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Calculate" asp-action="TrendCalculate">Trend Lüks</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Calculate" asp-action="IsiCamSistem">ISI Cam</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Calculate" asp-action="SurmeSistem">Sürme</a>
                        </li>
                        @{ if (User.Identity.IsAuthenticated)
                            {
                                var role = User.Claims.Where(c => c.Type == System.Security.Claims.ClaimTypes.Role).FirstOrDefault(x => x.Value == "Dealers");
                                var result = (role == null) ? "" : role.Value;
                                if (result == "Dealers")
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-controller="" asp-action="">Bayii Girişi</a>
                                    </li>
                                }
                            } }

                        @{ if (User.Identity.IsAuthenticated)
                            {
                                var role = User.Claims.Where(c => c.Type == System.Security.Claims.ClaimTypes.Role).FirstOrDefault(x => x.Value == "Factories");
                                var result = (role == null) ? "" : role.Value;
                                if (result == "Factories")
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-controller="" asp-action="">Firmamı Düzenle</a>
                                    </li>
                                }
                            } }
                        @{ if (User.Identity.IsAuthenticated)
                            {
                                var role = User.Claims.Where(c => c.Type == System.Security.Claims.ClaimTypes.Role).FirstOrDefault(x => x.Value == "AKR3P" || x.Value == "YÖNETİM" || x.Value == "FABRİKA");
                                var result = (role == null) ? "" : role.Value;
                                if (result == "AKR3P" || result == "YÖNETİM" || result == "FABRİKA")
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-controller="FactoryAdmin" asp-action="UserRoles">Admin</a>
                                    </li>
                                }
                            } }
                    </ul>
                    <div class="float-right">
                        @await Html.PartialAsync("_loginPartial")
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - <i>mimar</i><b>Soft</b> @*- <a asp-controller="Home" asp-action="Privacy">Gizlilik Politikamız</a>*@
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/anseki-leader-line/leader-line.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>