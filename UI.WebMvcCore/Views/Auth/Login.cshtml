@model UserForLogin
@{ ViewData["Title"] = "Üye Giriş"; }
<div class="row">

    <div class="col-md-4 offset-md-4">
        <h4><i>Üye</i> <b>Giriş Formu</b></h4>
        <hr />
        <form asp-action="Login" asp-controller="Auth">
            <input asp-for="ReturnUrl" hidden />
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <input class="form-control" asp-for="Email" placeholder="E-mail" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="form-control" asp-for="Password" name="Password" type="password" placeholder="Şifre" minlength="6" required />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-group">

                <input type="checkbox" /> Beni Hatırla
            </div>
            <div class="form-group">
                <input type="submit" value="Giriş yap" class="btn btn-success" />
            </div>
        </form>
        @*<a class="btn btn-info btn-block" asp-action="FacebookLogin">Facebook ile giriş yap</a>
            <a class="btn btn-info btn-block" asp-action="GoogleLogin">Google ile giriş yap</a>
            <a class="btn btn-info btn-block" asp-action="MicrosoftLogin">Microsoft ile giriş yap</a>*@

        <a class="btn btn-link" asp-action="ForgotPassword">Şifremi unuttum</a>
    </div>
</div>